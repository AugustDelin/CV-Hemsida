@{
    Layout = "_Layout";
}

@model IEnumerable<ProjektViewModel>
@using CVModels.ViewModels

<div class="container">
    @if (Model != null && Model.Any())
    {
        foreach (var projekt in Model)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">@projekt.Titel</h5>
                    <p class="card-text">@projekt.Beskrivning</p>
                    <a href="@Url.Action("Details", "Projekt", new { id = projekt.Id })" class="btn btn-primary">Mer detaljer</a>
                </div>
            </div>
        }
    }
    else
    {
        <p>Inga projekt att visa.</p>
    }
</div>
