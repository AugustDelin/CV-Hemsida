@model CVModels.ViewModels.ProjektViewModel

@{
    ViewData["Title"] = "Projektdetaljer";
}

<div class="container">
    <h2>@Model.Titel</h2>
    <p>@Model.Beskrivning</p>

    <h3>Deltagande Användare</h3>
    @if (Model.DeltagandeAnvändare != null && Model.DeltagandeAnvändare.Any())
    {
        <ul>
            @foreach (var användare in Model.DeltagandeAnvändare)
            {
                <li>@användare.Namn</li>  <!-- Listar namn på alla deltagande användare i projektet -->
            }
        </ul>
    }
    else
    {
        <p>Inga deltagande användare att visa.</p>     <!-- Meddelande om inga användare deltar i projektet -->
    }

    <a href="@Url.Action("ProjectPage", "Projekt")" class="btn btn-primary">Tillbaka till Projektlistan</a>    <!-- Länk för att återgå till projektlistan -->
</div>

