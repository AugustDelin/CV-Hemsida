@model CVModels.ViewModels.AnvändareCVViewModel
@{
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            Profilsida
        </div>
        <div class="card-body">

            <!-- Användarens namn och profilbild -->

            <h5 class="card-title">@Model.Namn</h5>
            <img src="@Model.ProfilbildPath" alt="Profilbild" class="card-img-top mb-3" />
            
            <!-- Information om användarens kompetenser, utbildningar och erfarenheter -->

            <p class="card-text"><strong>Kompetenser:</strong> @Model.Kompetenser</p>
            <p class="card-text"><strong>Utbildningar:</strong> @Model.Utbildningar</p>
            <p class="card-text"><strong>Tidigare Erfarenhet:</strong> @Model.TidigareErfarenhet</p>

            <!-- Lista över projekt där användaren deltar -->
            <h5 class="card-title">Projekt</h5>
            @if (Model.DeltarIProjekt != null && Model.DeltarIProjekt.Any())
            {
                <ul class="list-group">
                    @foreach (var projekt in Model.DeltarIProjekt)
                    {
                        <li class="list-group-item">@projekt.Titel</li>
                    }
                </ul>
            }
            else
            {
                <p>Inga registrerade projekt.</p>
            }

        </div>
    </div>
</div>
