@model CVModels.ViewModels.ChangeCVViewModel

@{
    Layout = "_Layout";
}

<h2>Ändra CV</h2>

@using (Html.BeginForm("SaveChanges", "CV", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.Id)

    <div class="form-group mb-3">
        <label asp-for="Kompetenser" class="form-label"></label>
        <input asp-for="Kompetenser" class="form-control" required />
        <span asp-validation-for="Kompetenser" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Utbildningar" class="form-label"></label>
        <input asp-for="Utbildningar" class="form-control" />
        <span asp-validation-for="Utbildningar" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="TidigareErfarenhet" class="form-label"></label>
        <input asp-for="TidigareErfarenhet" class="form-control" />
        <span asp-validation-for="TidigareErfarenhet" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ProfilbildPath" class="form-label"></label>
        <input type="file" asp-for="ProfilbildPath" class="form-control-file" />
        @if (!string.IsNullOrEmpty(Model.ProfilbildPath))
        {
            <img src="/Bilder/@Model.ProfilbildPath" alt="Profilbild" class="img-thumbnail mt-2" style="max-width: 200px;" />
        }
        <span asp-validation-for="ProfilbildPath" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Spara ändringar</button>
}
