@model ChangeInformationViewModel

@{
    ViewBag.Title = "Change Information";
}

<h2>Ändra Information</h2>

@using (Html.BeginForm("SaveInfo", "Profile", FormMethod.Post))
{
    <br>
    <div>
        <label asp-for="Förnamn"></label>
        <input asp-for="Förnamn" value="@Model.Förnamn" />
        <span asp-validation-for="Förnamn"></span>
    </div>
    <br>
    <div>
        <label asp-for="Efternamn"></label>
        <input asp-for="Efternamn" value="@Model.Efternamn" />
        <span asp-validation-for="Efternamn"></span>
    </div>
    <br>
    <div>
        <label asp-for="Adress"></label>
        <input asp-for="Adress" value="@Model.Adress" />
        <span asp-validation-for="Adress"></span>
    </div>

    <div>
        <label asp-for="ÄrProfilPrivat"></label>
        <input asp-for="ÄrProfilPrivat" />
        <span asp-validation-for="ÄrProfilPrivat"></span>
    </div>
    
    <br>

    <input type="submit" value="Spara" />
}
