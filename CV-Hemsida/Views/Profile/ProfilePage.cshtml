@{
    Layout = "_Layout";
}

@model IEnumerable<Person>

<div class="container">

    <!--Hugos sökruta-->
    <form method="get" action="@Url.Action("Search", "Profile")">
        <div class="input-group mb-3">
            <input type="text" class="form-control" name="searchTerm" placeholder="Sök efter profiler">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="submit">Sök</button>
            </div>
        </div>
    </form>
    <!--slut på sökrutan-->

    <!--Hugos felmeddelande-->
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-warning" role="alert">
            @ViewBag.ErrorMessage
        </div>
    }
    <!--slut på felmeddelande-->

    @if (Model != null && Model.Any())
    {
        @foreach (var person in Model)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">@person.FullName()</h5>
                    <p class="card-text">
                        <strong>Address:</strong> @person.Adress <br />
                        <strong>Personal Number:</strong> @person.Personnummer
                    </p>
                    <!-- Add more information about the person here -->
                </div>
            </div>
        }
    }
    else
    {
        <p>No profiles to display.</p>
    }
</div>
