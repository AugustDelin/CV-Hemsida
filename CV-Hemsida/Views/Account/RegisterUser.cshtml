@model CVModels.ViewModels.RegisterUserViewModel

@{
    ViewBag.Titel = "Register new user";
}

<div asp-validation-summary="All" class="text-danger"></div>

<h1>Registrera en ny användare</h1>

<form asp-controller="Account" asp-action="RegisterUser" method="post">
    <!-- Input-fält för e-post -->
    <div>
        <label asp-for="Email">E-post:</label>
        <input asp-for="Email" />
    </div>
    <!-- Input-fält för lösenord -->
    <div>
        <label asp-for="Password">Lösenord:</label>
        <input asp-for="Password" type="password" />
    </div>
    <!-- Input-fält för att bekräfta lösenord -->
    <div>
        <label asp-for="ConfirmPassword">Bekräfta lösenord:</label>
        <input asp-for="ConfirmPassword" type="password" />
    </div>
    <!-- Knapp för att skicka formuläret för registrering -->
    <button type="submit">Registrera</button>
</form>
