@using CVModels.ViewModels;
@model IEnumerable<AnvändareViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Välkommen till startsidan!</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            text-align: center;
        }

        .jumbotron {
            padding: 2rem 1rem;
            margin-bottom: 2rem;
            background-color: #e9ecef;
            border-radius: 0.3rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="jumbotron">
            <h1>Välkommen till startsidan!</h1>
            <p>Här kommer ett urval av CV.</p>
        </div>

        <div class="row">
            @if (Model.Any())
            {
                foreach (var användare in Model)
                {
                    <div class="col-md-4">
                        <div class="card">
                            <!-- Borttagen profilbild -->
                            <div class="card-body">
                                <h5 class="card-title">@användare.Namn</h5>
                                <p class="card-text">@användare.Kompetenser</p>
                                <!-- Ändrad text på knappen och kontrollera att länken är korrekt -->
                                <a href="@Url.Action("VisaAnvändaresCV", "CV", new { id = användare.Id })" class="btn btn-primary">Visa Profil med CV</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <p>Inga användare att visa.</p>
                </div>
            }
        </div>

        <!-- Det senast upplagda projektet (Denna del kan också behöva uppdateras dynamiskt) -->
        <div>
            <h3>Det senast upplagda projektet</h3>
            <h4>Projekt rubrik</h4>
            <p>Beskrivning på projektet</p>
            <a href="#" class="btn btn-primary">Länk till projektet</a>
        </div>
    </div>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
