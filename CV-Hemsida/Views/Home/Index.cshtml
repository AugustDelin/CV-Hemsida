@model IEnumerable<CVModels.ViewModels.CVViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Välkommen till startsidan!</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            text-align: center;
        }

        .jumbotron {
            padding: 2rem 1rem;
            margin-bottom: 2rem;
            background-color: #e9ecef;
            border-radius: 0.3rem;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="jumbotron">
            <h1>Välkommen till startsidan!</h1>
            <p>Här kommer ett urval av CV.</p>
        </div>

        <div class="row">
            @foreach (var cv in Model)
            {
                <div class="col-md-4">
                    <div class="card">
                        <h5 class="card-title">@cv.AnvändarNamn</h5>
                        <p>@cv.Kompetenser</p>
                        <p>@cv.Utbildningar</p>
                        <p>@cv.TidigareErfarenhet</p>
                        <a href="@Url.Action("VisaAnvändaresCV", "CV", new { användarId = @cv.Id })" class="btn btn-primary">Visa Profilsida</a>
                    </div>
                </div>
            }
            @* Kontrollera om det finns några CV att visa *@
            @if (!Model.Any())
            {
                <div class="col-12">
                    <p>Inga CV att visa.</p>
                </div>
            }
        </div>

        <div>
            <h3>Det senast upplagda projektet</h3>
            <h4>Projekt rubrik</h4>
            <p>Beskrivning på projektet</p>
            <!-- Länken ska leda till den faktiska sidan för det senaste projektet -->
            <a href="#" class="btn btn-primary">Länk till projektet</a>
        </div>

    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
