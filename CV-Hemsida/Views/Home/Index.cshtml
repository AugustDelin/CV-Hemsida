@model IEnumerable<CVModels.ViewModels.AnvändareViewModel>
@using CVModels.ViewModels;

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Head-detaljer borttagna för överskådlighet -->
</head>
<body>
    <div class="container">
        <div class="jumbotron">
            <h1>Välkommen till startsidan!</h1>
            <p>Här kommer ett urval av CV.</p>
        </div>

        <div class="row">
            @if (Model != null && Model.Any())
            {
                foreach (var användare in Model)
                {
                    <div class="col-md-4">
                        <div class="card">
                            <h5 class="card-title">@användare.Namn</h5>
                            <!-- Övrig användarinformation som kompetenser, utbildningar, etc. -->
                            <a href="@Url.Action("VisaAnvändaresCV", "CV", new { id = användare.Id })" class="btn btn-primary">Visa CVsida</a>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <p>Inga användare att visa.</p>
                </div>
            }
        </div>

        <!-- Det senast upplagda projektet -->
    </div>
    <!-- Skript och annan HTML borttagen för överskådlighet -->
</body>
</html>
